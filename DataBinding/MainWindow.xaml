<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="423" Width="388">
    <StackPanel Margin="10">

        <StackPanel x:Name="Spl_DataContextBsp">
            <StackPanel.DataContext>
                <local:Person Name="Anna Nass" Alter="34"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Name}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[1].Year}"/>

            <Button x:Name="Btn_Show" Content="Show" Click="Btn_Show_Click"/>
            <Button x:Name="Btn_Altern" Content="Altern" Click="Btn_Altern_Click"/>
        </StackPanel>

        <ListBox x:Name="Lbx_Personen" Height="100"
                 ItemsSource="{Binding Personenliste}"/>
        <Button x:Name="Btn_Add" Content="Neue Person" Click="Btn_Add_Click"/>
        <Button x:Name="Btn_Delete" Content="Lösche Person" Click="Btn_Delete_Click"/>
    </StackPanel>
</Window>
